{
  "name": "rpc-on-ws",
  "version": "4.0.0",
  "description": "A lightweight RPC library on websocket connection.",
  "main": "index.js",
  "scripts": {
    "test": "tsc -p spec && jasmine",
    "build": "npm run clean && npm run tsc && npm run rollup",
    "tsc": "tsc -p src/tsconfig.nodejs.json && tsc -p src/tsconfig.browser.json",
    "lint": "tslint \"*.ts\" \"spec/*.ts\" && npm run standard",
    "release": "clean-release",
    "standard": "standard \"**/*.config.js\"",
    "fix": "standard --fix \"**/*.config.js\"",
    "clean": "rimraf dist/",
    "rollup": "rollup --config rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plantain-00/rpc-on-ws.git"
  },
  "author": "York Yao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plantain-00/rpc-on-ws/issues"
  },
  "homepage": "https://github.com/plantain-00/rpc-on-ws#readme",
  "dependencies": {
    "rxjs": "5"
  },
  "devDependencies": {
    "@types/jasmine": "2.5.53",
    "clean-release": "1.3.1",
    "jasmine": "2.6.0",
    "rimraf": "2.6.1",
    "rollup": "0.45.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "2.0.1",
    "standard": "10.0.2",
    "tslint": "5.4.3",
    "typescript": "2.4.1"
  }
}
